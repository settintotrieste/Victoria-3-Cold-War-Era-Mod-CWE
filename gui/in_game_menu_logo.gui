### TEMPLATES
template "logo_letter_duration" {
	duration = 0.15
}
template "logo_letter_delay" {
	duration = 0.075
}
template "logo_letter_scale" {
	scale = 0.001
}
template "logo_letter_properties" {
	position = { 0 0 }
